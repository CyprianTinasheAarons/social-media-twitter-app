<% provide(:title, @user.name) %> <div class="row">
<aside class="col-md-4"> <section class="user_info">
<h1>
<%= gravatar_for @user %> <%= @user.name %>
</h1> </section>
<section class="user_stats">
<h2>Stats</h2>
<%= render 'shared/stats' %>

</aside>

<div class="col-md-8">
   <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
    <h3> Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
        <%= render @microposts %>
    </ol>
    
    <% end %>
</div>
 </div>